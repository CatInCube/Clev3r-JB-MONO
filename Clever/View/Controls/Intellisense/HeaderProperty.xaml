<UserControl x:Class="Clever.View.Controls.Intellisense.HeaderProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clever.View.Controls.Intellisense"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="100">
    <Grid Background="#00FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20px"/>
        </Grid.RowDefinitions>
        <Image x:Name="hoImage" Source="Image/Property.png" Grid.Column="0" Grid.Row="0" Width="14px" Height="14px" SnapsToDevicePixels="True" Margin="3"/>
        <TextBlock x:Name="hoText" Grid.Column="1" Grid.Row="0" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="14" FontFamily="Calibri" Foreground="#000000"/>
    </Grid>
</UserControl>
